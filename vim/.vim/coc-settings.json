{
  // general settings
  "coc.preferences.formatOnSaveFiletypes": [
    "cpp",
    "vim"
  ],
  "http.proxy": "http://proxy-lmi.global.lmco.com:80",
  "http.proxyStrictSSL": false,
  "suggest.autoTrigger": "none",
  "suggest.enablePreview": false,
  "suggest.disableMenu": true,
  "suggest.noselect": false,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  // clangd
  "clangd.arguments": [
    "-clang-tidy=0", "-background-index=0"
  ],
  "clangd.compilationDatabasePath": "build",
  "clangd.semanticHighlighting": true,

  // diagnostic
  "diagnostic.errorSign": "×",
  "diagnostic.hintSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "‼",

  // explorer
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.file.showHiddenFiles": true,
  "explorer.git.enable": true,
  "explorer.icon.enableNerdfont": false,
  "explorer.icon.enableVimDevicons": false,
  "explorer.width": 30,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],

  // git
  "git.addedSign.text": "▎",
  "git.addedSign.hlGroup": "CocDiffAdd",
  "git.changedSign.text": "▎",
  "git.changedSign.hlGroup": "CocDiffChange", 
  "git.removedSign.text": "▌",
  "git.removedSign.hlGroup": "CocDiffDelete",
  "git.changeRemovedSign.text": "▌",
  "git.changeRemovedSign.hlGroup": "CocDiffDelete",
  "git.topRemovedSign.text": "▔",
  "git.topRemovedSign.hlGroup": "CocDiffDelete",
  "git.enableGutters": true,
  "git.realtimeGutters": true,
  "git.branchCharacter": ""
}
