{
  //============================================================================
  // general settings
  //----------------------------------------------------------------------------
  // "http.proxy": "http://proxy-abc.your.domain.com:80",
  // "http.proxyStrictSSL": false,

  "[cpp][vim]": {
    "coc.preferences.formatOnSave": false,
    "semanticTokens.enable": true
  },
  "inlayHint.enable": false,
  "suggest.autoTrigger": "none",
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf794",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  //============================================================================
  // clangd
  //----------------------------------------------------------------------------
  "clangd.arguments": ["-clang-tidy=0", "-background-index=0"],
  "clangd.compilationDatabasePath": "build",

  //----------------------------------------------------------------------------
  // diagnostic
  //----------------------------------------------------------------------------
  "diagnostic.errorSign": "×",
  "diagnostic.hintSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",

  //----------------------------------------------------------------------------
  // explorer
  //----------------------------------------------------------------------------
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [link growRight 1 omitCenter 5]",
  "explorer.file.root.template": "[icon] [root] ([fullpath])",
  "explorer.file.hiddenRules": {
    "filenames": [".git", ".DS_Store", "node_modules"],
    "patternMatches": [] // show all other hidden files
  },
  "explorer.git.enable": true,
  "explorer.git.showIgnored" : false,
  "explorer.icon.enableNerdfont": true,
  "explorer.width": 35,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],

  //----------------------------------------------------------------------------
  // git
  //----------------------------------------------------------------------------
  "git.addedSign.hlGroup": "CocDiffAdd",
  "git.addedSign.text": "▎",
  "git.changeRemovedSign.hlGroup": "CocDiffDelete",
  "git.changeRemovedSign.text": "▌",
  "git.changedSign.hlGroup": "CocDiffChange", 
  "git.changedSign.text": "▎",
  "git.removedSign.hlGroup": "CocDiffDelete",
  "git.removedSign.text": "▌",
  "git.topRemovedSign.hlGroup": "CocDiffDelete",
  "git.topRemovedSign.text": "▔",
  "git.enableGutters": true,
  "git.realtimeGutters": true,
  "git.branchCharacter": "",
  "git.changedDecorator": "",
  "git.conflictedDecorator": "",
  "git.stagedDecorator": "",
  "git.untrackedDecorator": "",

  //----------------------------------------------------------------------------
  // yaml
  //----------------------------------------------------------------------------
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": "*.gitlab-ci.yml",
    "kubernetes": "/*.yaml"
  },
  "yaml.customTags": [
    "!reference sequence"
    ]
}
// vim:ft=jsonc
