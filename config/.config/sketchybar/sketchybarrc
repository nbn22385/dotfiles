#!/usr/bin/env bash

# Determine colors from base16-shell
BG=$(sed -n -e 's:^color_background="\(..\)/\(..\)/\(..\)".*:0xff\1\2\3:p' ~/.base16_theme)
FG=$(sed -n -e 's:^color_foreground="\(..\)/\(..\)/\(..\)".*:0xff\1\2\3:p' ~/.base16_theme)

PLUGINS="$HOME/.config/sketchybar/plugins"

# Bar
sketchybar -m --bar  \
  position=top       \
  height=35          \
  margin=4           \
  y_offset=-7        \
  corner_radius=10   \
  border_width=0     \
  border_color=$BG   \
  blur_radius=0      \
  padding_left=16    \
  padding_right=16   \
  color=$BG          \
  display=all        \
  hidden=off         \
  topmost=off        \
  font_smoothing=off \
  shadow=off

# Global defaults
sketchybar -m --default \
  updates=when_shown    \
  drawing=on            \
  cache_scripts=on                      

# Label Defaults
sketchybar -m --default                    \
  label.font="Iosevka Nerd Font:Bold:14.0" \
  label.color=$FG                          \
  label.highlight_color=$FG                \
  label.padding_left=4                     \
  label.padding_right=4                    \
  label.y_offset=-2

# Icon Defaults
sketchybar -m --default                   \
  icon.font="Iosevka Nerd Font:Bold:14.0" \                       

# Background Defaults
sketchybar -m --default       \
  background.height=32        \
  background.border_color=$BG \
  background.border_width=0   \
  background.corner_radius=0  \
  background.color=$BG        \
  background.drawing=off                                       

# Spaces
sketchybar -m --default                     \
  icon.padding_left=4                       \
  icon.padding_right=4                      \
  icon.y_offset=-2                          \
  --add space one left                      \
  --set one associated_space=1              \
    associated_display=1                    \
    icon=                                  \
    icon.highlight_color=0xff88c0d0         \
    click_script="yabai -m space --focus 1" \
  --add space two left                      \
  --set two associated_display=1            \
    associated_space=2                      \
    icon=                                  \
    icon.highlight_color=0xff88c0d0         \
    click_script="yabai -m space --focus 2" \
  --add space three left                    \
  --set three associated_display=1          \
    associated_space=3                      \
    icon=                                  \
    icon.highlight_color=0xff88c0d0         \
    click_script="yabai -m space --focus 3" \
  --add space four left                     \
  --set four associated_display=1           \
    associated_space=4                      \
    icon=                                  \
    icon.highlight_color=0xff88c0d0         \
    click_script="yabai -m space --focus 4"

# Right Items
sketchybar -m --default          \
  label.padding_left=0           \
  label.padding_right=0          \
  icon.padding_left=20           \
  icon.padding_right=8           \
  icon.y_offset=-2               \
  --add item clock right         \
  --set clock                    \
    update_freq=10               \
    script="$PLUGINS/clock.sh"   \
    icon=                       \
    icon.y_offset=-2             \
    icon.color=0xff8fbcbb        \
  --add item date right          \
  --set date                     \
    update_freq=100              \
    script="$PLUGINS/date.sh"    \
    icon=                       \
    icon.y_offset=-2             \
    icon.color=0xffb48ead        \
  --add item battery right       \
  --set battery                  \
    update_freq=3                \
    script="$PLUGINS/power.sh"   \
    icon=                       \
    icon.color=0xffbf616a        \
  --add item weather right       \
  --set weather                  \
    update_freq=1800             \
    icon.color=0xffd08770        \
    script="$PLUGINS/weather.sh" \
  --add item mailIndicator right \
  --set mailIndicator            \
    update_freq=30               \
    icon.color=0xff5e81ac        \
    script="$PLUGINS/mail.sh"    \
    click_script="osascript -e 'tell application \"Mail\" to activate'" 

# Center Items
sketchybar -m --add event window_focus \
              --add event title_change

sketchybar -m --add item title center                                           \
              --set title script="$PLUGINS/window_title.sh"       \
              --subscribe                                                       \
                title window_focus front_app_switched space_change title_change

sketchybar -m --update && echo "sketchybar configuration loaded.."
