#!/usr/bin/env sh

# bar settings
yabai -m config status_bar                      on
yabai -m config status_bar_text_font            "JetBrainsMono Nerd Font:Bold:10.0"
yabai -m config status_bar_icon_font            "JetBrainsMono Nerd Font:Bold:10.0"
yabai -m config status_bar_background_color     0xff2e3440
yabai -m config status_bar_foreground_color     0xffa8a8a8
yabai -m config status_bar_power_icon_strip      ﮣ
# yabai -m config status_bar_power_icon_strip     "B A"
yabai -m config status_bar_space_icon_strip     WWW DEV 3 4 5 6
yabai -m config status_bar_space_icon           x
yabai -m config status_bar_clock_icon           ""

# global settings
yabai -m config layout                          float
yabai -m config mouse_follows_focus             off
yabai -m config focus_follows_mouse             off
yabai -m config window_placement                second_child
yabai -m config window_topmost                  off
yabai -m config window_shadow                   float
yabai -m config window_border                   off
yabai -m config window_border_placement         interior
yabai -m config window_border_width             2 
yabai -m config window_border_radius            5 
yabai -m config active_window_border_topmost    off
yabai -m config active_window_border_color      0xFFFFFFFF
yabai -m config normal_window_border_color      0xB2282828
yabai -m config insert_window_border_color      0xB2EBDBB2
yabai -m config window_opacity                  off
yabai -m config split_ratio                     0.50
yabai -m config auto_balance                    on
yabai -m config mouse_modifier                  fn
yabai -m config mouse_action1                   move
yabai -m config mouse_action2                   resize

# general space settings
yabai -m config --space 2 layout                bsp
yabai -m config --space 2 top_padding           4
yabai -m config --space 2 bottom_padding        4
yabai -m config --space 2 left_padding          4
yabai -m config --space 2 right_padding         4
yabai -m config --space 2 window_gap            4

# rules
yabai -m rule --add app="^System Preferences$" manage=off border=off
yabai -m rule --add app=Preview manage=off border=off
yabai -m rule --add app=Finder manage=off topmost=off
